<div metal:use-macro="view.global_template"
     xmlns:i18n="http://xml.zope.org/namespaces/i18n"
     i18n:domain="unicorecmsmama">
<div metal:fill-slot="content">
    <div id="banner">
        <a href="#">Weâ€™re with you every step of the way.</a>
    </div><!--/banner-->

    <div class="category-recommend" tal:condition="view.get_featured_pages()">
        <div class="h1" i18n:translate="latest">Latest</div>
        <div class="item" tal:repeat="page view.get_featured_pages()">
            <span tal:define="primary_category view.get_category(page.primary_category)">
            <span class="category-${primary_category.slug}">
                <a href="/content/detail/${page.uuid}/">${primary_category.title}</a></span><br />
            <a href="/content/detail/${page.uuid}/">${page.title}</a>
            <div>${page.description}</div>
            <div class="date">${view.format_date(page.created_at)}</div>
            </span>
        </div>
    </div>

    <div class="content-inner" tal:repeat="cat view.get_categories()">
        <div class="category-${cat.slug}">
            <div class="h1">${cat.title}</div>
            <div class="item" tal:repeat="page view.get_featured_category_pages(cat.uuid)">
                <span tal:define="primary_category view.get_category(page.primary_category)">
                <span class="category-${primary_category.slug}">
                    <a href="/content/detail/${page.uuid}/">${primary_category.title}</a></span><br />
                <a href="/content/detail/${page.uuid}/">${page.title}</a>
                <div>${page.description}</div>
                <div class="date">${view.format_date(page.created_at)}</div>
                </span>
            </div>
            <div class="pagi" tal:condition="view.get_featured_category_pages(cat.uuid)">
              <a href="/content/list/${cat.uuid}/"><span i18n:translate="More">More</span> ${cat.title}</a>
            </div>
        </div>
    </div>
</div>
</div>
