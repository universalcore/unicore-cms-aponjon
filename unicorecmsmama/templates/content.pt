<div metal:use-macro="view.global_template">
    <div metal:fill-slot="content">
        <div class="category-${primary_category.slug}">

            <div class="h1">
                <a href="/content/list/${primary_category.uuid}/">${primary_category.title}</a>
            </div>

            <div class="detail">
                <div class="h3">${page.title}</div>
                <condition tal:omit-tag="" tal:condition="page.image_host and page.image">
                    <img alt="img" src="${view.get_image_url(page.image_host, page.image, 350, 150)}"/>
                </condition>
                <!-- test image!<img alt="img" src="https://encrypted-tbn3.gstatic.com/images?q=tbn:ANd9GcS-4jpnKajPFZ8mR-qdjfnm9kGZnr1GC_2wA5-NcJDFyMqPKVr6hA"/> -->
                <div><p>Created by BabyCenter</p>${structure:content}</div>
                <div class="date">${view.format_date(page.created_at)}</div>

            </div>

            <div class="category-related" tal:condition="linked_pages">
                <div class="h1">More Articles</div>
                <div class="item" tal:repeat="linked_page linked_pages">
                    <a href="/content/detail/${linked_page.uuid}/">${linked_page.title}</a>
                </div>
            </div>

            <div class="pagi">
                <a href="/content/list/${primary_category.uuid}/" class="right">More Articles &gt;</a>
            </div>

        </div>
    </div>
</div>
